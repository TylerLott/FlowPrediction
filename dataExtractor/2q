// AmiraFile, contains the mesh of the flow field for each timestep of the simulation
//

#pragma once

class AmiraFile {
  // class stuff here
  public:
    //constructor with filepath input
    AmiraFile(int); 
    float* nextTimestep();

  private:
    int xDim, yDim, zDim;
    float xmin, xmax, ymin, ymax, zmin, zmax;
    int numComp;
    int idx = 0;
    const int NumToRead = xDim * yDim * zDim * numComp;
    float* pData = new float[NumToRead];


};

